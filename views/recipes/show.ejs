<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%=recipe.name%></title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h1><%=recipe.name%></h1>
      <img width="500px" src="<%=recipe.img%>" />
      <div class="container">
        <div class="row">
          <div class="col s6">
              <ul>
        <% for(i = 0; i < recipe.ingredients.length/2; i++) { %>
        <li><%= recipe.ingredients[i] %></li>
        <% } %>
              </ul>
          </div>
          <div class="col s6">
              <ul>
        <% for(i = Math.ceil(recipe.ingredients.length/2); i <
        recipe.ingredients.length; i++) { %>
        <li><%= recipe.ingredients[i] %></li>
        <% } %>
              </ul>
          </div>
        </div>
      </div>
 
      </ul>
      <ol>
        <% recipe.steps.forEach((step) => { %>
        <li>
          <%= step %>
        </li>
        <% }) %>
      </ol>
      <% recipe.tags.forEach((tag) => { %>
      <span class="chip"><%= tag%> </span>
      <% }) %>
    </div>

    <h4><a href="/recipes/<%=recipe.id%>/edit">Edit This Recipe</a></h4>

    <form action="/recipes/<%=recipe.id%>?_method=DELETE" method="POST">
      <input type="submit" value="Remove Recipe" />
    </form>

    <h3><a href="/">Back to Index</a></h3>
  </body>
</html>
